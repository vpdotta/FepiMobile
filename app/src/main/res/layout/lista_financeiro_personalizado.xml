    Criado em: 06/07/2019 por Lucas Pereira -> 1 layout
    Modificado em: 03/08/2019 por Lucas Pereira -> Cores, shapes e outros
-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_principal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/arredondado_superior_azul">

        <TextView
            android:id="@+id/nome_competencia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="COMPETÊNCIA: "
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/branco"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/valor_competencia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text=""
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/branco"
            android:textSize="13dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="#EEE">

        <TextView
            android:id="@+id/titulo_valor_bruto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fontFamily="sans-serif-light"
            android:text="VALOR BRUTO" />

        <TextView
            android:id="@+id/titulo_bolsa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fontFamily="sans-serif-light"
            android:text="BOLSA" />

        <TextView
            android:id="@+id/titulo_bolsa_cond"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fontFamily="sans-serif-light"
            android:text="BOLSA COND." />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_valores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@color/cinzaFraco1">

        <TextView
            android:id="@+id/valor_valor_bruto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:text="0" />

        <TextView
            android:id="@+id/valor_bolsa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:text="0" />

        <TextView
            android:id="@+id/valor_bolsa_cond"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_titulo_alteracoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:visibility="gone"
        android:background="#EEE">

        <TextView
            android:id="@+id/titulo_juros"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fontFamily="sans-serif-light"
            android:text="JUROS" />

        <TextView
            android:id="@+id/titulo_multa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fontFamily="sans-serif-light"
            android:text="MULTA" />

        <TextView
            android:id="@+id/titulo_desconto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fontFamily="sans-serif-light"
            android:text="DESCONTO" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_valores_alteracoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:visibility="gone"
        android:background="@color/cinzaFraco1">

        <TextView
            android:id="@+id/valor_juros"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:text="0" />

        <TextView
            android:id="@+id/valor_multa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:text="0" />

        <TextView
            android:id="@+id/valor_desconto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_informacoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/arredondado_inferior_cinza">

        <TextView
            android:id="@+id/titulo_situacao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13dp"
            android:text="SITUAÇÃO:"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/valor_situacao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13dp"
            android:text=""
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/titulo_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13dp"
            android:text="DATA BAIXA:"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/valor_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13dp"
            android:text=""
            android:textStyle="bold"
            android:textAlignment="center"/>
    </LinearLayout>
</LinearLayout>